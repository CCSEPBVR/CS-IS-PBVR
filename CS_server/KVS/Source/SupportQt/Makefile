#*****************************************************************************
#  $Id: Makefile 62 2009-03-19 06:58:44Z naohisa.sakamoto $
#*****************************************************************************

#=============================================================================
#  Include.
#=============================================================================
include ../../kvs.conf
include ../../Makefile.def


#=============================================================================
#  Makefile for Qt.
#=============================================================================
QT_MAKEFILE := BuildRule.mk


#=============================================================================
#  build.
#=============================================================================
build:: $(QT_MAKEFILE)
	$(MAKE) -f $(QT_MAKEFILE) $(MFLAGS) $(MAKEOVERRIDES)


#=============================================================================
#  clean.
#=============================================================================
clean::
	$(RMDIR) $(OUTDIR)
	$(RM) $(QT_MAKEFILE)


#=============================================================================
#  install.
#=============================================================================
install:: $(QT_MAKEFILE)
	$(MAKE) -f $(QT_MAKEFILE) $(MFLAGS) $(MAKEOVERRIDES) install


#=============================================================================
#  qmake.
#=============================================================================
$(QT_MAKEFILE):
	$(QMAKE) -o $(QT_MAKEFILE) $(SOLUTION).pro
