#*****************************************************************************
#  $Id: Makefile 62 2009-03-19 06:58:44Z naohisa.sakamoto $
#*****************************************************************************

#=============================================================================
#  Include.
#=============================================================================
include ../../../pbvr.conf
include ../../../arch/$(PBVR_MACHINE)
include ../../Makefile.def


#=============================================================================
#  INCLUDE_PATH, LIBRARY_PATH, LINK_LIBRARY, INSTALL_DIR.
#=============================================================================
INCLUDE_PATH := -I..
LIBRARY_PATH :=
LINK_LIBRARY :=
INSTALL_DIR  := ../../../$(KVS_DIR_NAME)


#=============================================================================
#  Include build rule.
#=============================================================================
ifeq "$(NO_CLIENT)" "1"
include BuildRuleServerOnly.mk
else
include BuildRule.mk
endif


#=============================================================================
#  Project name.
#=============================================================================
TARGET_LIB := $(OUTDIR)/$(LIB_KVS_CORE)


#=============================================================================
#  Build rule.
#=============================================================================
$(TARGET_LIB): $(OBJECTS)
	$(AR) $@ $^
	$(RANLIB) $@


#=============================================================================
#  build.
#=============================================================================
build:: $(TARGET_LIB)


#=============================================================================
#  clean.
#=============================================================================
clean::
	$(RMDIR) `find $(OUTDIR) -name "*.o"`

all_clean::
	$(RMDIR) $(OUTDIR)


#=============================================================================
#  install.
#=============================================================================
install::
	$(MKDIR) $(INSTALL_DIR)/lib
	$(INSTALL) $(TARGET_LIB) $(INSTALL_DIR)/lib
	$(RANLIB) $(INSTALL_DIR)/lib/$(LIB_KVS_CORE)
